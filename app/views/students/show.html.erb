<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <% if @parents %>
    <strong>Parent(s):</strong>
    <br>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.name %></td>
      </tr>
    <% end %>
  <% end%>
</p>

<%= link_to 'Add Parent', new_parent_path(@student) %>

<h1>Grades for <%= @student.name %></h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Score</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.assignment_name %></td>
        <td><%= grade.score %></td>
        <td><%= grade.date %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Delete', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Grade', new_grade_path(@student) %>
<br>

