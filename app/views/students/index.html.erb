<div class="col-md-9">
<!-- <p id="notice"><%= notice %></p> -->

<h1>Students</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to "#{student.name}", student %></td>
        <td><%= mail_to "#{student.email}" %></td>
        <td><%= link_to 'Add Grade', new_grade_path %></td>
        <td><%= link_to 'Add Parent', new_parent_path %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="5"><%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, new_student_path %></td>
    <tr>
  </tbody>
</table>

</div>
