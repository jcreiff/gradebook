<div class="col-md-9">
<p id="notice"><%= notice %></p>

<h1>Grades</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><%= "Student" if session[:teacher_id] %></th>
      <th>Assignment name</th>
      <th>Date</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student.name if session[:teacher_id]%></td>
        <td><%= grade.assignment.name %></td>
        <td><%= grade.assignment.date.strftime "%b %d, %Y" %></td>
        <td><%= grade.score %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) if session[:teacher_id]%></td>
        <td><%= link_to 'Delete', grade, method: :delete, data: { confirm: 'Are you sure?' } if session[:teacher_id]%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @grades %>
</div>
<br>

</div>
