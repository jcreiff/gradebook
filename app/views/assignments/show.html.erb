<p id="notice"><%= notice %></p>

<section class="col-md-9">
  <h1><%= @assignment.name %></h1>
  <h4><%= @assignment.date.strftime "%b %d, %Y"%></h3>
</section>


<section class="col-md-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Student</th>
        <th>Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @assignment.grades.each do |grade| %>
        <tr>
          <td><%= link_to "#{grade.student.name}", grade.student %></td>
          <td><%= grade.score %></td>
          <td><%= link_to 'Edit', edit_grade_path(grade) if session[:teacher_id] %></td>
          <td><%= link_to 'Delete', grade, method: :delete, data: { confirm: 'Are you sure?' } if session[:teacher_id] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add Grade', new_grade_path(@student) if session[:teacher_id] %>
</section>
